{
  "name": "shop-store",
  "version": "1.0.0",
  "description": "A backend for a shop store",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "start:prod": "node ./dist/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "lint": "npx eslint . ",
    "lint:fix": "eslint . --ext .ts, .js --fix",
    "prettier": "prettier --check  \"./src/**/*.+(js|ts|json)\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format": "npm run lint:fix && npm run prettier:fix"
  },
  "keywords": [
    "backend",
    "typescript",
    "express",
    "mongoose",
    "mongodb",
    "zod"
  ],
  "author": "Shakhawat",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mongodb": "^6.11.0",
    "mongoose": "^8.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.12.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
